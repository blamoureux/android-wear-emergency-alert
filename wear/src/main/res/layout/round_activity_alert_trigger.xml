<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:paddingLeft="@dimen/round_activity_padding"
    android:paddingTop="@dimen/round_activity_padding_top"
    android:paddingRight="@dimen/round_activity_padding"
    android:paddingBottom="@dimen/round_activity_padding_bottom"
    tools:context=".AlertTriggerActivity"
    tools:deviceIds="wear_round">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="@color/white"
        android:visibility="gone"
        android:text="@string/lbl_sending" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="@color/white"
        android:drawableStart="@drawable/ic_launcher"
        android:drawablePadding="@dimen/round_title_drawable_padding"
        android:gravity="center"
        android:visibility="visible"
        android:textSize="@dimen/round_title_text_size"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_are_you_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:textColor="@color/white"
        android:gravity="center"
        android:visibility="visible"
        android:textSize="@dimen/round_alert_message_text_size"
        android:text="@string/msg_alert" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <android.support.wearable.view.DelayedConfirmationView
            android:id="@+id/btn_confirm"
            android:layout_width="@dimen/round_delayed_confirmation_button_size"
            android:layout_height="@dimen/round_delayed_confirmation_button_size"
            android:src="@drawable/ic_navigation_cancel"
            app:circle_color="@color/delayed_confirmation_button_color_state"
            app:circle_border_color="@color/green_dark"
            app:circle_border_width="@dimen/round_delayed_confirmation_button_border_width"
            app:circle_padding="@dimen/round_delayed_confirmation_button_padding"
            app:circle_radius="@dimen/round_delayed_confirmation_button_radius"/>

        <TextView
            android:id="@+id/tv_confirmation_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/round_delayed_confirmation_label_margin"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:textSize="@dimen/round_delayed_confirmation_label_text_size"
            android:text="@string/lbl_sending"/>

    </LinearLayout>

</RelativeLayout>
